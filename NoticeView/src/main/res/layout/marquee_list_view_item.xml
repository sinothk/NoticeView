<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="2dp"
    android:paddingEnd="5dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/itemTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/temp_02"
        android:textSize="@dimen/notice_txt_size"
        android:textColor="@color/notice_txt_color"
        android:visibility="visible"
        android:layout_marginStart="6dp"
        android:text="2020-04-08" />

    <TextView
        android:id="@+id/itemNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/itemTimeTv"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/notice_txt_size"
        android:textColor="@color/notice_txt_color"
        android:src="@drawable/temp_02"
        android:text="美国美国美国美国美国美国美国美国美国美国美国美国美国美国美国美国美国美国" />

</RelativeLayout>